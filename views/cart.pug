doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title BookShop | Home
    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-primary 
            .container
                a(href="/").navbar-brand BookShop 
                ul.navbar-nav 
                    li.nav-item
                        a(href="/").nav-link Home 
                    li.nav-item
                        a(href="/category").nav-link Category 
                    li.nav-item
                        a(href="/insert").nav-link Insert  
                    li.nav-item
                        a(href="").nav-link Cart  
                    li.nav-item
                        a(href="/logout").nav-link Logout  
        .container 
            -var total =0
            .col-6.mx-auto 
                .row 
                    if NoPro >= 1
                        h3 No of items 
                            = NoPro
                    else 
                        .row.mt-3
                            .col.text-center
                                h3.mx-auto Your Cart is empty
                each value in cartpro
                    -total = total + value.price*value.qty
                    .card.mb-3 
                        .card-body 
                            .row 
                                .col-4 
                                    img(src="", alt="")
                                .col 
                                    h4= value.name
                                    .card-title 
                                        .mb-3 
                                            small.small.text-muted Price 
                                                = value.price 
                                        a(href=`${'/remove-to-cart/'+value.productId}`).btn.btn-danger.fw-bold  -
                                        span.mx-2=  value.qty
                                        a(href=`${"/addtocart/"+value.productId}`).btn.btn-success.fw-bold  +
                h4 Total Amount =  
                    = total