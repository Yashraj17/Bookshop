doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title BookShop | Home
    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-primary 
            .container
                a(href="/").navbar-brand BookShop 
                ul.navbar-nav 
                    li.nav-item
                        a(href="/").nav-link Home 
                    li.nav-item
                        a(href="/category").nav-link Category 
                    li.nav-item
                        a(href="/insert").nav-link Insert  
                    li.nav-item
                        a(href='/cart').nav-link cart
                    li.nav-item
                        a(href="/logout").nav-link Logout  
        .container 
            .row 
                .col-3.mt-3 
                    .list-group 
                        h4 Book Category
                        each category in cat 
                            a(href=`${'/category-filter/'+category._id}`).list-group-item.list-group-item-action= category.cat_title
                .col-9.mt-3
                    .row 
                        each value in data
                            .col-4 
                                .card.mb-3.mx-2
                                    img(src=`${'/'+value.image}`, alt="",style="height: 180px;")
                                    .card-body.text-center
                                        h5= value.title
                                        h6  Category | 
                                            = value.category.cat_title
                                        h6.text-secondary= `Rs. ${value.price} /-`
                                        a(href=`${"/View/"+value._id}`).btn.btn.sm.btn-success View
