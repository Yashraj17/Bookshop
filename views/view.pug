doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title Bookshop | ViewProduct
    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-primary 
            .container
                a(href="/").navbar-brand BookShop 
                ul.navbar-nav 
                    li.nav-item
                        a(href="/").nav-link Home 
                    li.nav-item
                        a(href="/insert").nav-link Insert  
                    li.nav-item
                        a(href="/insert").nav-link Category 
                    li.nav-item
                        a(href="/cart").nav-link Cart  
                    li.nav-item
                        a(href="/logout").nav-link Logout  
        .container 
            .row
                .col-9.mx-auto.mt-4 
                    .card 
                        .card-body 
                            .row 
                                .col-4
                                    img(src=`${'/'+data.image}`, alt='',style="height:200px; width:200px;")
                                .col-8 
                                    h5 Product Details
                                    table.table.px-2 
                                        tr 
                                            th Title 
                                            td= `${data.title}`
                                        tr
                                            th Category 
                                            td= `${data.category.cat_title}`
                                        tr
                                            th Price 
                                            td= `${data.price}`
                                    a(href=`${"/addtocart/"+data._id}`).btn.btn-sm.btn-success.me-4 Add to cart 
                                    a(href="").btn.btn-sm.btn-warning.text-white Buy Now