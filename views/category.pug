doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title BookShop | Home
    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-primary 
            .container
                a(href="/").navbar-brand BookShop 
                ul.navbar-nav 
                    li.nav-item
                        a(href="/").nav-link Home 
                    li.nav-item
                        a(href="/insert").nav-link Insert  
                    li.nav-item
                        a(href="").nav-link About  
                    li.nav-item
                        a(href="/logout").nav-link Logout 
        .container 
            .row.mt-5
                .col-4
                    .card 
                        .card-body
                            h4.mb-3.text-center Insert Books Category
                            form(action="", method="post" ) 
                                .mb-3 
                                    label(for="") Category Title 
                                    input(type="text", name="cat_title").form-control 
                                .mb-3 
                                    label(for="") Category Description 
                                    input(type="text", name="cat_description").form-control 
                                .mb-3 
                                    input(type="submit", value="Create").btn.btn-primary.w-100
                .col-8 
                    table.table 
                        tr 
                            th Cat Title 
                            th Cat Description
                            th Action
                        each value in data
                            tr 
                                td= value.cat_title 
                                td= value.cat_description
                                th 
                                    a(href="").btn.btn-sm.btn-success.me-2 Edit 
                                    a(href=`${'/delete/'+value._id}`).btn.btn-sm.btn-danger Delete 